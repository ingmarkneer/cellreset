# Production Environment Variables
# Diese Werte müssen in Railway/Vercel konfiguriert werden

# Node Environment
NODE_ENV=production

# Server
PORT=3000
API_PREFIX=api/v1

# Database (Railway PostgreSQL wird automatisch gesetzt)
# DB_HOST wird von Railway bereitgestellt
# DB_PORT wird von Railway bereitgestellt
# DB_USERNAME wird von Railway bereitgestellt
# DB_PASSWORD wird von Railway bereitgestellt
# DB_DATABASE wird von Railway bereitgestellt

# WICHTIG: Diese Werte MUSST du manuell in Railway setzen
JWT_SECRET=GENERIERE_EINEN_SICHEREN_32_ZEICHEN_STRING
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=30d

# Redis (Railway Redis wird automatisch gesetzt)
# REDIS_HOST wird von Railway bereitgestellt
# REDIS_PORT wird von Railway bereitgestellt
# REDIS_PASSWORD wird von Railway bereitgestellt (optional)

# WICHTIG: Diese Werte MUSST du manuell in Railway setzen
ENCRYPTION_KEY=GENERIERE_EINEN_SICHEREN_32_ZEICHEN_STRING

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS (Vercel Frontend URL)
CORS_ORIGIN=https://cellreset.vercel.app,https://app.cellreset.de

# AWS S3 (oder kompatibel)
# OPTIONAL: Erst später konfigurieren wenn File-Uploads benötigt werden
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=dein_access_key
AWS_SECRET_ACCESS_KEY=dein_secret_key
S3_BUCKET_CONTENT=cellreset-content
S3_BUCKET_UPLOADS=cellreset-user-uploads
S3_BUCKET_EXPORTS=cellreset-exports

# Email (SendGrid/Mailgun)
# OPTIONAL: Erst später konfigurieren wenn E-Mail-Versand benötigt wird
EMAIL_FROM=noreply@cellreset.com
EMAIL_API_KEY=dein_email_api_key

# Push Notifications (FCM)
# OPTIONAL: Erst später konfigurieren
FCM_SERVER_KEY=dein_fcm_server_key
