# Environment
NODE_ENV=development

# Server
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=cellreset
DB_PASSWORD=cellreset_dev_password
DB_DATABASE=cellreset_db

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=30d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (or S3-compatible)
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_CONTENT=cellreset-content
S3_BUCKET_UPLOADS=cellreset-user-uploads
S3_BUCKET_EXPORTS=cellreset-exports

# Encryption (for sensitive health data)
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:19006

# Email (SendGrid/Mailgun)
EMAIL_FROM=noreply@cellreset.com
EMAIL_API_KEY=your_email_api_key

# Push Notifications (FCM)
FCM_SERVER_KEY=your_fcm_server_key
